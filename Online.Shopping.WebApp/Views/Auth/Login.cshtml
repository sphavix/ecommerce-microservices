@model Online.Shopping.WebApp.Models.AuthDtos.LoginDto

<form method="post">
    <div class="container border p-4">
        <div class="row text-center p-3">
            <h2>Sign In</h2>
            <hr />
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="UserName" type="text" class="form-control" placeholder="Username" />
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Sign In</button>
            </div>
        </div>
    </div>
</form>
